{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true, //A file that links minified JavaScript code to its original source code, aiding in the debugging process.
        "noImplicitAny": true, //TypeScript will fall back to a type of any for a variable when it cannot infer the type.

    },
    "include": ["src/**/*"],// Including all the files in src and directories
    
}
